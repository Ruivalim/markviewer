{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MarkViewer",
  "version": "0.1.0",
  "identifier": "com.ruivalim.markviewer",
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "path",
          "index": 1,
          "takesValue": true,
          "required": false,
          "description": "File or folder to open"
        }
      ]
    }
  },
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "MarkViewer",
        "width": 1280,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
